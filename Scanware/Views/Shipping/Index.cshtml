@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shipping Activity</h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        Open Rail Loads (@Model.shipment_loads_rail.Count)
    </div>

    <div class="panel-body">

        
        <table class="table table-striped table-bordered increase_font">
            <thead>
                                        <tr>
                                            <th>Load No</th>
                                            <th>Rail Car</th>
                                            <th>Started</th>
                                            <th>User</th>

                                        </tr>
            </thead>
        <tbody>

            @if(Model.shipment_loads_rail.Count > 0){

                foreach (var shipment in Model.shipment_loads_rail)
                {
                    <tr>
                        <td><a href="/Shipping/LoadRail?char_load_id=@shipment.char_load_id">@shipment.char_load_id</a></td>
                        <td>@shipment.vehicle_no</td>
                        <td>@shipment.change_datetime</td>
                        <td>@shipment.change_user_name</td>
                    </tr>
    
                }
                
            }
            else{
                <tr><td colspan="4">No open rail loads</td></tr>
            }

              
        </tbody>
        </table>
        </div>
        </div>


<div class="panel panel-primary">
    <div class="panel-heading">
        Trucks on Site (@Model.shipment_loads.Count)
    </div>

    <div class="panel-body">
    @if (Model.shipment_loads != null)
    {
        
        <table class="table table-striped table-bordered increase_font">
            <thead>
                                        <tr>
                                            <th>Load Card</th>
                                            <th>Scale In Time</th>
                                            <th>Scale Weight In</th>
                                            <th>Vehicle No</th>
                                            <th>Change User</th>
                                            <th>Locations</th>
                                        </tr>
            </thead>
        <tbody>

            @foreach (var load in Model.shipment_loads)
            {
                <tr>
                    <td><a class="color_visited" href="/Shipping/LoadTruck?char_load_id=@load.char_load_id">@load.char_load_id</a></td>
                    <td>@load.scale_time_in</td>
                    <td>@load.scale_weight_in</td>
                    <td>@load.vehicle_no</td>
                    <td>@load.change_user_name</td>
                    <td>@load.load_dtl_locations</td>
                </tr>
    
            }
               
        </tbody>
        </table>       
    }
    else
    {

        <p>No Trucks On Site</p>

    }
    </div>

</div>



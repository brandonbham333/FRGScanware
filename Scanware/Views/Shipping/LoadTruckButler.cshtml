                    data: { production_coil_no: passedPaperworkTag, load_id: load_id, inputName: "shippingTag", scanner_used : is_scanner_used },
                    type: "POST",
                    success: function (result) {
                        $('#verifiedCoilsContainer').html(result)
                        $('#production_coil_no').focus(

    function Verify()
    {
        var load_id = $('#verify_char_load_id').val();

        if (load_id > 0) 
        {
            $.ajax(
               {
                   url: "/Shipping/AllCoilsVerified",
                   data: { load_id: load_id },
                   type: "POST",
                   success: function (result)
                   {
                       if (result != "SUCCESS")
                       {
                           alert(result);
                       }
                       else 
                       {
                           location.reload();
                       }
                   }
